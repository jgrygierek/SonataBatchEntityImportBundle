{% extends get_admin_template('layout', admin.code) %}

{% block sonata_admin_content %}
    {% block notice %}
        {% include '@SonataCore/FlashMessage/render.html.twig' %}
    {% endblock notice %}

    <div class="sonata-ba-form">
        <div class="box box-primary">
            <div class="box-header">
                <h4 class="box-title">{{ 'page.title.select_file'|trans({}, 'SonataBatchEntityImportBundle') }}</h4>
            </div>
            <div class="box-body">
                {{ form_start(form) }}
                {{ form_rest(form) }}
                <button type="submit" id="btn-submit"
                        class="btn btn-primary">{{ 'form.button.import'|trans({}, 'SonataBatchEntityImportBundle') }}</button>
                {{ form_end(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
